        <PackageReference Include="AspNetCore.HealthChecks.Uris" Version="9.0.0"/>
        <PackageReference Include="Azure.Extensions.AspNetCore.Configuration.Secrets" Version="1.4.0" />
        <PackageReference Include="Azure.Identity" Version="1.16.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\.dockerignore">
          <Link>.dockerignore</Link>
        </Content>
        <None Remove="HealthChecks\css\healthchecksui.css" />
        <Content Include="HealthChecks\css\healthchecksui.css">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Topica.Aws\Topica.Aws.csproj" />
      <ProjectReference Include="..\Topica.Azure.ServiceBus\Topica.Azure.ServiceBus.csproj" />
      <ProjectReference Include="..\Topica.Kafka\Topica.Kafka.csproj" />
      <ProjectReference Include="..\Topica.Pulsar\Topica.Pulsar.csproj" />
      <ProjectReference Include="..\Topica.RabbitMq\Topica.RabbitMq.csproj" />
      <ProjectReference Include="..\Topica\Topica.csproj" />
    </ItemGroup>

</Project>
